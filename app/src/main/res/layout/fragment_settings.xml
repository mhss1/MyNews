<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="18dp"
    tools:context=".ui.fragments.SettingsFragment">

    <TextView
        android:id="@+id/country_text"
        android:text="Top headlines country "
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/country_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/country_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:padding="8dp"

        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/country_spinner"
        android:background="@color/colorOnBackground"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/language_text"
        android:text="Article searches language"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/languages_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/language_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:padding="8dp"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/languages_spinner"
        android:background="@color/colorOnBackground"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/theme_text"
        android:text="App Theme"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Spinner
        android:id="@+id/theme_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/theme_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:padding="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>